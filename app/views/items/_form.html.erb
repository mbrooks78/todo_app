<%= form_for ([@user, @list, @item]), :html => { :class => "form-horizontal item" } do |f| %>

    <% if @item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :item_entry, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_entry, :class => 'form-control' %>
    </div>
    <%= error_span(@item[:item_entry]) %>
  </div>
  <div class="control-group">
    <%= f.label :due_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :due_date, ampm: true, :class => 'form-control' %>
    </div>
    <%= error_span(@item[:due_date]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              user_list_items_path, :class => 'btn btn-default' %>

<% end %>
